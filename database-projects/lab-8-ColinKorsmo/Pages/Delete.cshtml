@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete</h2>

    <h3>Are you sure you want to delete this patient?</h3>


<div class="container">
    <h3>Patient</h3>
    <hr />
    <table>
        <tbody>
            <tr>
                <th>First Name</th>
                <td>@Model.Patient.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.Patient.LastName</td>
            </tr>
            <tr>
                <th>Admittance Date</th>
                <td>@Model.Patient.AdmitDate.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Description of Symptoms</th>
                <td>@Model.Patient.SymptomDescription</td>
            </tr>
        </tbody>
    </table>    
    <form method="post">
        <input type="hidden" asp-for="Patient.Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


