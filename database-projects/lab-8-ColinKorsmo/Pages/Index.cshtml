@page
@model IndexModel
@{
    ViewData["Title"] = "Patients List";
}

<h2>Index</h2>

<a asp-page="Create">Add New Patient</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Admittance Date</th>
            <th scope="col">Description of Symptoms</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.AdmitDate.ToShortDateString()</td>
                <td>@patient.SymptomDescription</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@patient.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@patient.Id">Delete</a> |
                    <a asp-page="Details" asp-route-id="@patient.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


