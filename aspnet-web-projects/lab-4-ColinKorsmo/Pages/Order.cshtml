@page
@model lab_4_ColinKorsmo.Pages.OrderModel
@{
    ViewData["Title"] = "Order";
}

<h3>MindSync Premium Subscription</h3>

<p>Ads are how we can keep MindSync prices low and continue our important research. If you would prefer not to receive ads, please subscribe to MindSync Premium for only $1,999/mo.</p>

<!-- Display Data Validation Summary of all errors. Optional -->
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SerialNumber"></label>
        <input asp-for="SerialNumber" class="form-control" placeholder="0" required />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreditCardNumber"></label>
        <input asp-for="CreditCardNumber" class="form-control" required />
        <span asp-validation-for="CreditCardNumber" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@if (Model.IsSubmitted)
    {
        <div>
            Thank you @Model.Name for purchasing the ad-free tier for your MindSync with Serial Number #@Model.SerialNumber.
        </div>
    }

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}